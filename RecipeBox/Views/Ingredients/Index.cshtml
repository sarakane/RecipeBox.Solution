@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<RecipeBox.Models.Ingredient>;

<h1>Ingredients</h1>
<hr>
@if(@Model.Count == 0)
{
  <h3>No ingredients have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Ingredient ingredient in Model)
  {
    <li>@Html.ActionLink($"{ingredient.Name}", "Details", new { id = ingredient.IngredientId})</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a new ingredient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>