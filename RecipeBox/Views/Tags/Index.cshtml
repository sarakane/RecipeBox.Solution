@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<RecipeBox.Models.Tag>

<h1>Tags</h1>

@if(@Model.Count == 0)
{
  <h3>There aren't any tags yet!</h3>
}
else
{
  @foreach(Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId } )</li>
  }
}

<p>@Html.ActionLink("Add new tag", "Create")</p>